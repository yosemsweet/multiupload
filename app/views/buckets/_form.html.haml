= form_for @bucket do |f|
  -if @bucket.errors.any?
    #error_explanation
      %h2= "#{pluralize(@bucket.errors.count, "error")} prohibited this bucket from being saved:"
      %ul
        - @bucket.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
